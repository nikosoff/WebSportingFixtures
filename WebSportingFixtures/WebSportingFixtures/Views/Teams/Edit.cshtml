@using WebSportingFixtures.Core.Models;
@model Team

@{
    ViewBag.Title = "Edit team";
}


@if (Model != null)
{
    <p>@Html.ValidationMessage("PostEditTeamError")</p>

    <form method="post">
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
            <span>@Html.ValidationMessage("PostEditTeamNameError")</span>
        </div>

        <div>
            <label asp-for="KnownName"></label>
            <input asp-for="KnownName" />
            <span asp-validation-for="KnownName"></span>
            <span>@Html.ValidationMessage("PostEditTeamKnownNameError")</span>
        </div>

        <input type="submit" name="save" value="Save" />
        <a asp-action="Index">Back</a>
    </form>
}
else
{
    <h3>Team with id: @Url.ActionContext.RouteData.Values["id"] does not exists</h3>
    <a asp-action="Index">Back</a>
}

